# Keycloak SMTP (Postmark)
# Copy this file to auth/.env and fill in the token.
#
# NOTE: auth/.env is gitignored.
GRYT_SMTP_USER=
GRYT_SMTP_PASS=

# Realm import behavior
# - Set to 1 to (re)import realm JSON into Postgres on startup (overrides existing config).
# - Leave as 0 for production so restarts don't overwrite runtime/admin changes.
GRYT_IMPORT_REALM=0

# Keycloak bootstrap admin (required on first boot of a fresh DB)
GRYT_KEYCLOAK_ADMIN_USERNAME=admin
GRYT_KEYCLOAK_ADMIN_PASSWORD=change_me

# Keycloak public URLs (important behind proxies so OIDC discovery uses correct https URL)
GRYT_KEYCLOAK_HOSTNAME_URL=https://auth.gryt.chat
GRYT_KEYCLOAK_HOSTNAME_ADMIN_URL=https://auth.gryt.chat

# Postgres (Keycloak DB)
# Change these in production.
GRYT_AUTH_POSTGRES_DB=keycloak
GRYT_AUTH_POSTGRES_USER=keycloak
GRYT_AUTH_POSTGRES_PASSWORD=change_me

# Optional overrides
GRYT_SMTP_HOST=smtp.postmarkapp.com
GRYT_SMTP_PORT=587
GRYT_SMTP_FROM=hello@gryt.chat
GRYT_SMTP_FROM_NAME="Gryt Chat"
GRYT_SMTP_REPLY_TO=hello@gryt.chat
GRYT_SMTP_REPLY_TO_NAME="Gryt Chat"

